<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PathChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="colorControlNormal">@color/on_primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PathChallenge.CardStyle">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.CardTitle</item>
    </style>

    <style name="TextAppearance.AppCompat.CardTitle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.AppCompat.Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Theme.PathChallenge.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
        <item name="android:padding">@dimen/dimen_8</item>
    </style>

    <style name="TextAppearance.Body" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="Theme.PathChallenge.ProgressbarStyle">
        <item name="android:indeterminateTint">@color/primary</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>